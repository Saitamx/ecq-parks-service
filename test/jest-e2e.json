{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverage": true,
  "coverageReporters": ["text", "lcov"],
  "coveragePathIgnorePatterns": [
    "/node_modules/",
    "src/main.ts",
    "src/app.module.ts"
  ]
}
